{
  "name": "root",
  "private": true,
  "packageManager": "pnpm@8.5.1",
  "author": "mawencan",
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "homepage": "https://github.com/hengshanMWC/monorepo-template#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hengshanMWC/monorepo-template.git"
  },
  "bugs": {
    "url": "https://github.com/hengshanMWC/monorepo-template/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "init": "pnpm i && npm run prepare",
    "commit": "cz",
    "release": "esno ./scripts/release",
    "build": "pkgs run build",
    "test": "pkgs run test",
    "test:cov": "pkgs run test:cov",
    "lint-staged": "lint-staged",
    "lint": "eslint --ext=js,ts,json,md,tsx .",
    "lint:fix": "eslint --fix --ext=js,ts,json,md,tsx .",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@abmao/pkgs": "2.2.3",
    "@antfu/eslint-config-ts": "^0.43.1",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/parser": "^5.59.7",
    "@vitest/coverage-c8": "^0.26.3",
    "colors": "^1.4.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.41.0",
    "esno": "^0.16.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "ts-loader": "^9.4.3",
    "typescript": "^5.0.4",
    "validate-npm-package-name": "^5.0.0",
    "vite": "^4.4.11",
    "vitepress": "1.0.0-alpha.29",
    "vitest": "^0.34.6",
    "webpack": "^5.84.1",
    "webpack-cli": "^5.1.1"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts,less,md,json}": "npm run lint:fix"
  }
}
